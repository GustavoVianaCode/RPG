{
  "compilerOptions": {
    /* Linguagem alvo e módulos */
    "target": "ES2020",
    "module": "commonjs",

    /* Pastas de entrada e saída */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Estritas e interoperabilidade */
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    /* Permitir que o TS enxergue tipos em src/types */
    "typeRoots": ["./node_modules/@types", "./src/types"]
  }
}
